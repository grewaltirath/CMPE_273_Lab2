<% if(bid_flag == "auction") { %>
  <div class="container">
    <h3>Item Description</h3> <hr /> <br />
    <form action="/placeBid" method="post" id="itemDisplay">
    Item ID: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  <input type="text" value=<%=item_id %> name="item_id" size="20" readonly> <br /> <br />
    Item Name: &nbsp &nbsp &nbsp &nbsp &nbsp  <input type="text" value=<%=item_name %> name="item_name" size="20" readonly> <br /> <br />
    Item Price: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  <input type="text" value=<%=item_price %> name="item_price" size="20" readonly> <br /> <br />
    Item Description: &nbsp<input type="text" value='<%=item_desc %>' name="item_desc" size="20" readonly> <br /> <br />
    Current Bid:  &nbsp &nbsp &nbsp &nbsp &nbsp<strong><%= current %> </strong><br /> <br />
    Maximum Bid: &nbsp &nbsp <input type="number" placeholder="Enter your bid" name="bid" size="20"id="bid" min=<%= current %> > <br /> <br />
    Seller Email Id: &nbsp &nbsp<input type="text" value=<%=email %> name="email" size="20" readonly> <br /> <br />
    Type: &nbsp &nbsp &nbsp &nbsp  &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp<input type="text" size="20" value=<%=bid_flag %> name="bid_flag" readonly> <br /> <br />

  
     
    <input type="submit" value="Place Bid" class="btn btn-primary">
    </form> </div>

<% } else { %>

    <div class="container">
    <h3>Item Description</h3> <hr /> <br />
    <form action="/Cart" method="post" id="itemDisplay">
   <input type="hidden" value=<%=item_id %> name="item_id"> <br /> 
    Item Name: <input type="text" value=<%=item_name %> name="item_name" readonly> <br /> <br />
